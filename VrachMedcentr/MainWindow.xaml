<Window x:Class="WPF_Hospital.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Hospital"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1280"  WindowStyle="SingleBorderWindow">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        <Button Click="AddNewPage" Margin="308,30,906,0" Height="36" VerticalAlignment="Top"/>
        <TextBox x:Name="Textbox1" HorizontalAlignment="Left" Height="23" Margin="10,28,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Button1"  HorizontalAlignment="Left" Margin="171,28,0,0" VerticalAlignment="Top" Width="95" Height="23"/>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem x:Name="MenuFile" Click="MenuFile_Click" Header="File"/>
        </Menu>
        <TabControl  x:Name="PacientCard"  Margin="0,100,0,200" >
            <TabItem  x:Name="page1">
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock TextAlignment ="Center"><Run Text="Титульний"/></TextBlock>
                        <TextBlock TextAlignment ="Center"><Run Text="лист"/></TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="page2">
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock TextAlignment ="Center"><Run Text="Сигнальні"/></TextBlock>
                        <TextBlock TextAlignment ="Center"><Run Text="позначки"/></TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="page3">
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock TextAlignment ="Center"><Run Text="Лист запису"/></TextBlock>
                        <TextBlock TextAlignment ="Center"><Run Text="Заключних діагнозів"/></TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="page4">
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock TextAlignment ="Center"><Run Text="Картка обліку навантаженнь"/></TextBlock>
                        <TextBlock TextAlignment ="Center"><Run Text="при рентген дослідженнях"/></TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="page5">
                <TabItem.Header>
                    <WrapPanel>
                        <TextBlock TextAlignment ="Center"><Run Text="Щоденник"/></TextBlock>
                        <GridSplitter Grid.Column="1" Grid.RowSpan="2" Width="3" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
                    </WrapPanel>
                </TabItem.Header>
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
