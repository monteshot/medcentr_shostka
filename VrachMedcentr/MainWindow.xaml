<Window x:Class="WPF_Hospital.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Hospital"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1280"  WindowStyle="SingleBorderWindow">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition ></RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel>
            <Menu>
                <MenuItem x:Name="File" Header="File">
                   
                </MenuItem>
            </Menu>
            <WrapPanel>
                
            </WrapPanel>
        </StackPanel>
        <GridSplitter Grid.Row="1" Width="50"></GridSplitter>
        <TabControl Grid.Row="1"  x:Name="PacientCard"  Margin="0,0,0,0" d:IsHidden="True" >
            <TabItem  x:Name="page1">
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock TextAlignment ="Center"><Run Text="Титульний"/></TextBlock>
                        <TextBlock TextAlignment ="Center" Foreground="#FF020202"><Run Text="лист"/></TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="page2">
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock TextAlignment ="Center"><Run Text="Сигнальні"/></TextBlock>
                        <TextBlock TextAlignment ="Center"><Run Text="позначки"/></TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="#FFE5E5E5">
                    <TabControl>
                        <TabItem Header="Сигнальні позначки">
                            <Grid Background="#FFE5E5E5">
                                <GroupBox Header="Сигнальні позначки" HorizontalAlignment="Left" Height="298" Margin="122,28,0,0" VerticalAlignment="Top" Width="260">
                                    <Grid>
                                        <Label Content="Цукровий діабет" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                        <Label Content="Інфекційні захворювання" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,31,0,0"/>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Відомості про щеплення">
                            <DataGrid/>
                        </TabItem>
                        <TabItem Header="Листок профілактичного огляду" >
                            <Grid Background="#FFE5E5E5">
                                <DataGrid/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem x:Name="page3">
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock TextAlignment ="Center"><Run Text="Лист запису"/></TextBlock>
                        <TextBlock TextAlignment ="Center"><Run Text="Заключних діагнозів"/></TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="page4">
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock TextAlignment ="Center"><Run Text="Картка обліку навантаженнь"/></TextBlock>
                        <TextBlock TextAlignment ="Center"><Run Text="при рентген дослідженнях"/></TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="page5">
                <TabItem.Header>
                    <WrapPanel>
                        <TextBlock TextAlignment ="Center"><Run Text="Щоденник"/></TextBlock>
                        <GridSplitter Grid.Column="1" Grid.RowSpan="2" Width="3" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
                    </WrapPanel>
                </TabItem.Header>
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
